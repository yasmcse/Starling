<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_main_graph"
    app:startDestination="@id/nav_graph_home">


    <!-- Include graphs from other modules here -->
    <include app:graph="@navigation/nav_graph_home"/>
    <include app:graph="@navigation/nav_graph_saving_goals"/>

    <!-- Add all the actions here  -->
    <action
        android:id="@+id/action_to_home_fragment"
        app:destination="@+id/nav_graph_home"
        app:popUpTo="@id/navigation_main_graph"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"/>

    <action
        android:id="@+id/action_to_saving_goals_fragment"
        app:destination="@+id/nav_graph_saving_goals"
        app:popUpTo="@id/nav_graph_saving_goals"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"/>

    <action
        android:id="@+id/action_to_add_new_saving_goal"
        app:destination="@+id/nav_graph_saving_goals"
        app:popUpTo="@id/nav_graph_saving_goals"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_exit_anim"
        />
</navigation>